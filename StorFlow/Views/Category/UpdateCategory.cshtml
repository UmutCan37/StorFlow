@model Category
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Kategori Güncelleme Sayfası</h4>
                <form class="forms-sample" method="post">
                    <div class="form-group">
                        <input type="hidden" asp-for="CategoryId" />
                        <label for="exampleInputName1">Kategori Adı</label>
                        <input type="text" class="form-control" id="exampleInputName1" placeholder="Kategori Adını Yazınız" asp-for="CategoryName">
                    </div>
                    <div class="form-group">
                        <label>Kategori Durumu</label>
                        <div class="form-check">
                            <input class="form-check-input"
                                   type="checkbox"
                                   asp-for="CategoryStatus"
                                   id="categoryStatusCheck">
                            <label class="form-check-label" for="categoryStatusCheck">
                                Aktif mi?
                            </label>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success mr-2">Kategoriyi Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>

